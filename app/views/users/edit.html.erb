<%= form_with model: @user, method: :patch do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, placeholder: 'foobar' %>
  <%= form.label :email %>
  <%= form.text_field :email, placeholder: 'foo@bar.com' %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.submit %>
<% end %>